<header>
  <h1>SoShell</h1>

  <ul>
    <% if (locals.user) {%>
    <li>
      <a href="/users/profile/<%= user.id%>"><%= user.name %></a>
    </li>
    <li>
      <a href="/users/signout">Sign Out</a>
    </li>
    <% } else { %>
    <li>
      <a href="/users/signup">Sign Up</a>
